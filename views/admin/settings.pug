extends template/layout.pug

block content
 .m-content
    // begin::table
    .m-portlet
      .m-portlet__head
        .m-portlet__head-caption
          .m-portlet__head-title
            span.m-portlet__head-icon.m--hide
              i.la.la-gear
            h3.m-portlet__head-text
              | Upload Files
      // begin::Form
      form#uploadForm.m-form.m-form--fit.m-form--label-align-right.m-form--group-seperator-dashed(method="POST" enctype="multipart/form-data" action="/admin/upload")
        .m-portlet__body
          .form-group.m-form__group.row
            label.col-lg-2.col-form-label
              | Last Version:
            .col-lg-3
              input#last_version.form-control.m-input(type='text' name='last_version' disabled)
              span.m-form__help
                |
            label.col-lg-2.col-form-label(for='exampleInputEmail1')
                | Choose File:
            .col-lg-3
              div
                .custom-file
                  input#customFile.custom-file-input(type='file' name='fileupload')
                  label.custom-file-label(for='customFile')
                    | Choose file
              span.m-form__help
                | 
          .form-group.m-form__group.row
            label.col-lg-2.col-form-label
              | File Version:
            .col-lg-3
              input.form-control.m-input(type='text' placeholder='Enter file version' name='file_version')
              span.m-form__help
                |
            label.col-lg-2.col-form-label
              | Description:
            .col-lg-3
              .m-input-icon.m-input-icon--right
                textarea#file_description.form-control.m-input.m-input--air(rows='10' name='description')
                      | 
              span.m-form__help
                | Please enter description
        .m-portlet__foot.m-portlet__no-border.m-portlet__foot--fit
          .m-form__actions.m-form__actions--solid
            .row
              .col-lg-9
              .col-lg-3
                button#btn_upload.btn.btn-success(type="submit")
                  | Upload

block data_script
  script(src='/admin/js/upload-file.js' type='text/javascript')
